@model ApproveClaimViewModel
@{
    ViewData["Title"] = "Approve Claim";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .glass-theme-bg {
        background-image: url('https://images.unsplash.com/photo-1557683316-973673baf926?q=80&w=2029&auto-format&fit=crop');
        background-size: cover;
        background-attachment: fixed;
    }

    .glass-panel {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
    }

    .text-light-emphasis {
        color: rgba(255, 255, 255, 0.85);
    }

    .text-light-muted {
        color: rgba(255, 255, 255, 0.65);
    }

    /* Form Controls */
    .form-control-glass {
        background: rgba(0, 0, 0, 0.2) !important;
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        color: #fff !important;
        border-radius: 0.5rem;
    }

        .form-control-glass:focus {
            border-color: #FFC107 !important;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25) !important;
        }

    /* Button Styles */
    .btn-success-glass {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
        opacity: 0.8;
        transition: opacity 0.2s ease;
    }

        .btn-success-glass:hover {
            color: #fff;
            background-color: #28a745;
            border-color: #28a745;
            opacity: 1;
        }

    .btn-outline-light {
        color: #f8f9fa;
        border-color: #f8f9fa;
    }

        .btn-outline-light:hover {
            color: #000;
            background-color: #f8f9fa;
            border-color: #f8f9fa;
        }
</style>

<script>document.body.classList.add('glass-theme-bg');</script>

<div class="container-fluid py-4">
    <div class="glass-panel p-4 p-md-5">
        <h2 class="mb-4 text-light-emphasis">@ViewData["Title"]</h2>

        <div class="row">
            <div class="col-lg-8 col-xl-6">

                <div class="glass-panel p-4 mb-4" style="background: rgba(0,0,0,0.15);">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-light-muted fw-light">Employee Name</dt>
                        <dd class="col-sm-7 text-light-emphasis">@Model.EmployeeName</dd>

                        <dt class="col-sm-5 text-light-muted fw-light">Total Amount Claimed</dt>
                        <dd class="col-sm-7 text-light-emphasis">₹@Model.TotalAmount.ToString("N2")</dd>

                        <dt class="col-sm-5 text-light-muted fw-light">Employee's Annual Limit</dt>
                        <dd class="col-sm-7 text-light-emphasis">₹@Model.EmployeeClaimLimit.ToString("N2")</dd>

                        <dt class="col-sm-5 text-light-muted fw-light">Remaining Balance</dt>
                        <dd class="col-sm-7 text-light-emphasis">₹@Model.RemainingClaimableAmount.ToString("N2")</dd>
                    </dl>
                </div>

                <form asp-action="Approve" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger p-2 small" role="alert"></div>

                    <input type="hidden" asp-for="ClaimId" />

                    <div class="form-group mb-3">
                        <label asp-for="ApprovedAmount" class="control-label form-label text-light-muted"></label>
                        <input asp-for="ApprovedAmount" class="form-control form-control-glass" />
                        <span asp-validation-for="ApprovedAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Confirm Approval" class="btn btn-success-glass btn-lg" />
                        <a asp-action="Details" asp-route-id="@Model.ClaimId" class="btn btn-outline-light btn-lg ms-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>