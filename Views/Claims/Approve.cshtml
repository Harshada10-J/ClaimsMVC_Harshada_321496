

@model ApproveClaimViewModel

@{

    ViewData["Title"] = "Approve Claim";

}



<h1>@ViewData["Title"]</h1>

<hr />



<div class="row">

    <div class="col-md-6">

        <dl class="row">

            <dt class="col-sm-5">Employee Name</dt>

            <dd class="col-sm-7">@Model.EmployeeName</dd>



            <dt class="col-sm-5">Total Amount Claimed</dt>

            <dd class="col-sm-7">₹@Model.TotalAmount.ToString("N2")</dd>



            <dt class="col-sm-5">Employee's Annual Limit</dt>

            <dd class="col-sm-7">₹@Model.EmployeeClaimLimit.ToString("N2")</dd>



            <!-- This is the new section to display the remaining balance -->

            <dt class="col-sm-5">Remaining Balance</dt>

            <dd class="col-sm-7">₹@Model.RemainingClaimableAmount.ToString("N2")</dd>

        </dl>



        <form asp-action="Approve" method="post">

            <div asp-validation-summary="All" class="text-danger" role="alert"></div>



            <input type="hidden" asp-for="ClaimId" />



            <div class="form-group mb-3">

                <label asp-for="ApprovedAmount" class="control-label"></label>

                <input asp-for="ApprovedAmount" class="form-control" />

                <span asp-validation-for="ApprovedAmount" class="text-danger"></span>

            </div>



            <div class="form-group">

                <input type="submit" value="Confirm Approval" class="btn btn-success" /> |

                <a asp-action="Details" asp-route-id="@Model.ClaimId" class="btn btn-secondary">Cancel</a>

            </div>

        </form>

    </div>

</div>