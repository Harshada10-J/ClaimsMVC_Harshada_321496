@model IEnumerable<AuditLog>
    @{
    ViewData["Title"] = "System Audit Log";
    }

    <style>
        /* The Poppins font is essential for this design */
        body {
            font-family: 'Poppins', sans-serif;
        }

        /* The subtle, professional background for the entire page */
        .glass-theme-bg {
            background-image: url('https://images.unsplash.com/photo-1557683316-973673baf926?q=80&w=2029&auto=format&fit=crop');
            background-size: cover;
            background-attachment: fixed; /* Keeps the background still on scroll */
        }

        /* The main glass panel style */
        .glass-panel {
            background: rgba(255, 255, 255, 0.05); /* Very subtle white tint */
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 1rem; /* Softer, modern corners */
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
        }

        .text-light-emphasis {
            color: rgba(255, 255, 255, 0.85);
        }

        .text-light-muted {
            color: rgba(255, 255, 255, 0.65);
        }

        /* Table Styles for the glass theme */
        .table-glass {
            color: #fff;
        }

            .table-glass th {
                border-bottom: 1px solid rgba(255, 255, 255, 0.3) !important;
                font-weight: 500;
            }

            .table-glass td, .table-glass th {
                border-top: none;
                padding: 0.75rem 1rem;
            }

            .table-glass tbody tr {
                border: none;
                transition: background-color 0.2s ease-in-out;
            }

                .table-glass tbody tr:hover {
                    background-color: rgba(255, 255, 255, 0.05);
                }
    </style>

    <script>document.body.classList.add('glass-theme-bg');</script>

    <div class="container-fluid py-4">
        <div class="glass-panel p-4 p-md-5">
            <h1 class="display-6 text-light-emphasis">@ViewData["Title"]</h1>
            <p class="text-light-muted">Showing the 100 most recent actions in the system.</p>

            <div class="table-responsive mt-4">
                <table class="table table-sm table-glass align-middle">
                    <thead>
                        <tr>
                            <th style="width: 20%;">Date & Time</th>
                            <th style="width: 20%;">Action</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Timestamp.ToLocalTime().ToString("g")</td>
                            <td>@item.Action</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
