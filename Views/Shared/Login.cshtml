@{
    // This tells the page to use the simple layout without a navigation bar.
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Log In";
}
@model LoginViewModel

<h3 class="text-center mb-4">@ViewData["Title"]</h3>

@if (TempData["StatusMessage"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["StatusMessage"]
</div>
}

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">

        <!-- FIX: Changed from asp-for="Input.EmployeeNo" to just "EmployeeNo" -->
        <input asp-for="EmployeeNo" class="form-control" placeholder="Employee Number" />
        <label asp-for="EmployeeNo"></label>
        <span asp-validation-for="EmployeeNo" class="text-danger"></span>

    </div>
    <div class="form-floating mb-3">

        <!-- FIX: Changed from asp-for="Input.Password" to just "Password" -->
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-lg btn-primary">Log In</button>
    </div>
    <div class="mt-3 text-center">
        <p>
            <a asp-action="Register">Register as a new user</a>
        </p>
    </div>
</form>