@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Register";
}
@model RegisterViewModel

<h3 class="text-center mb-4">@ViewData["Title"]</h3>
<h4 class="text-center text-muted fw-light">Activate your online account.</h4>
<hr />
<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="EmployeeNo" class="form-control" placeholder="Employee Number" />
        <label asp-for="EmployeeNo"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
        <label asp-for="FullName"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <label asp-for="Email"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Password" class="form-control" placeholder="Password" />
        <label asp-for="Password"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
        <label asp-for="ConfirmPassword"></label>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-lg btn-primary">Register</button>
    </div>
    <div class="mt-3 text-center">
        <p>
            <a asp-action="Login">Already have an account? Login</a>
        </p>
    </div>
</form>